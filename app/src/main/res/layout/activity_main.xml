<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/playPauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play" />

    <Button
        android:id="@+id/increaseVolumeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Increase Volume"
        android:layout_below="@id/playPauseButton"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/decreaseVolumeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decrease Volume"
        android:layout_below="@id/increaseVolumeButton"
        android:layout_marginTop="16dp" />

</RelativeLayout>
